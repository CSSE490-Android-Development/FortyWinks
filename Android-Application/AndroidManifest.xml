<?xml version="1.0" encoding="utf-8"?>
<manifest
	xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.fernferret.android.fortywinks"
	android:versionCode="1"
	android:versionName="0.8">
	<application
		android:icon="@drawable/icon"
		android:label="@string/app_name">
		<activity
			android:name=".FortyWinks"
			android:label="@string/app_name"
			android:configChanges="orientation"
			android:screenOrientation="portrait">
			<intent-filter>
				<action
					android:name="android.intent.action.MAIN"/>
				<category
					android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".WakeUpAlert"
			android:label="@string/activity_title_open_alarm"
			android:configChanges="orientation"
			android:screenOrientation="portrait"
			android:theme="@android:style/Theme.Wallpaper.NoTitleBar.Fullscreen">
		</activity>
		<activity
			android:name=".EditAlarm"
			android:label="@string/activity_title_edit_alarm"
			android:configChanges="orientation"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".AddQuikAlarm"
			android:label="Add new QuikAlarm"
			android:configChanges="orientation"
			android:screenOrientation="portrait">
		</activity>
		<activity
			android:name=".ListAlarms"
			android:label="@string/activity_title_view_alarms"
			android:configChanges="orientation"
			android:screenOrientation="portrait"/>
		<activity
			android:name=".FortyPrefs"
			android:label="@string/preferences"
			android:screenOrientation="portrait"/>
		<receiver
			android:name=".SingleAlarm"
			android:process=":remote"/>
		<receiver
			android:name=".MultiAlarm"
			android:process=":remote"/>
	</application>
	<uses-permission
		android:name="android.permission.WAKE_LOCK"></uses-permission>
	<uses-permission
		android:name="android.permission.DISABLE_KEYGUARD"></uses-permission>
</manifest>