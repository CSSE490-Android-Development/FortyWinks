<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
	xmlns:android="http://schemas.android.com/apk/res/android">
	<EditTextPreference
		android:dialogTitle="@string/pref_sleep_cycle_title"
		android:dialogMessage="@string/pref_sleep_cycle_summary"
		android:positiveButtonText="OK"
		android:negativeButtonText="Cancel"
		android:key="@string/key_cycle_time"
		android:title="@string/pref_sleep_cycle_title"
		android:summary="@string/pref_sleep_cycle_summary"
		android:inputType="number"
		android:maxLength="3"
		android:selectAllOnFocus="true"
		android:defaultValue="90"/>
	<EditTextPreference
		android:dialogTitle="@string/pref_time_to_sleep_dialog_title"
		android:dialogMessage="@string/pref_time_to_sleep_dialog_message"
		android:positiveButtonText="OK"
		android:negativeButtonText="Cancel"
		android:key="@string/key_time_to_sleep"
		android:title="@string/pref_time_to_sleep_title"
		android:summary="@string/pref_time_to_sleep_summary"
		android:inputType="number"
		android:maxLength="2"
		android:selectAllOnFocus="true"
		android:defaultValue="14"/>
	<EditTextPreference
		android:dialogTitle="FollowUp Alarms"
		android:dialogMessage="Set the default number of FollowUp Alarms"
		android:positiveButtonText="OK"
		android:negativeButtonText="Cancel"
		android:key="@string/key_followup_alarms"
		android:title="FollowUp Alarms"
		android:summary="Set the default number of FollowUp Alarms"
		android:inputType="number"
		android:maxLength="2"
		android:selectAllOnFocus="true"
		android:defaultValue="4"/>
	<EditTextPreference
		android:dialogTitle="FollowUp Interval"
		android:dialogMessage="Set the default time between FollowUp alarms in mins"
		android:positiveButtonText="OK"
		android:negativeButtonText="Cancel"
		android:key="@string/key_followup_interval"
		android:title="FollowUp Interval"
		android:summary="Set the default time between FollowUp alarms in mins"
		android:inputType="number"
		android:maxLength="2"
		android:selectAllOnFocus="true"
		android:defaultValue="5"/>
	<RingtonePreference
		android:ringtoneType="all"
		android:showDefault="true"
		android:showSilent="false"
		android:key="@string/key_default_alarm_tone"
		android:title="Default Alarm Sound"
		android:summary="Pick the sound that will be used for Quik Alarms and Power Naps"/>
</PreferenceScreen>